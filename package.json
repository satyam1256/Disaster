{
  "name": "disaster-response-platform",
  "version": "1.0.0",
  "description": "A comprehensive MERN stack disaster response platform with real-time data aggregation, geospatial queries, and AI-powered features.",
  "main": "backend/index.js",
  "scripts": {
    "start": "cd backend && npm start",
    "dev": "concurrently \"cd backend && npm run dev\" \"cd frontend && npm start\"",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "backend": "cd backend && npm start",
    "frontend": "cd frontend && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/satyam1256/Disaster.git"
  },
  "keywords": [
    "disaster-response",
    "mern-stack",
    "real-time",
    "geospatial",
    "ai-powered",
    "express",
    "react",
    "socket.io"
  ],
  "author": "Satyam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/satyam1256/Disaster/issues"
  },
  "homepage": "https://github.com/satyam1256/Disaster#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "backend",
    "frontend"
  ]
} 